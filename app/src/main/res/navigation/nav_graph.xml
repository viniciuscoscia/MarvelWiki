<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/charactersList">
    <fragment
            android:id="@+id/charactersList"
            android:name="com.vinicius.marvelwiki.ui.fragment.characters.CharactersFragment"
            android:label="Characters List"
            tools:layout="@layout/fragment_characters">
        <action
                android:id="@+id/action_charactersList_to_detailsFragment"
                app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
            android:id="@+id/comicsFragment"
            android:name="com.vinicius.marvelwiki.ui.fragment.comics.ComicsFragment"
            android:label="ComicsFragment"
            tools:layout="@layout/fragment_comics">
        <action
                android:id="@+id/action_comicsFragment_to_detailsFragment"
                app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
            android:id="@+id/creatorsFragment"
            android:name="com.vinicius.marvelwiki.ui.fragment.creators.CreatorsFragment"
            android:label="CreatorsFragment"
            tools:layout="@layout/fragment_creators">
        <action
                android:id="@+id/action_creatorsFragment_to_detailsFragment"
                app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
            android:id="@+id/eventsFragment"
            android:name="com.vinicius.marvelwiki.ui.fragment.events.EventsFragment"
            android:label="EventsFragment"
            tools:layout="@layout/fragment_events">
        <action
                android:id="@+id/action_eventsFragment_to_detailsFragment"
                app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
            android:id="@+id/storiesFragment"
            android:name="com.vinicius.marvelwiki.ui.fragment.stories.StoriesFragment"
            android:label="StoriesFragment"
            tools:layout="@layout/fragment_stories">
        <action
                android:id="@+id/action_storiesFragment_to_detailsFragment"
                app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
            android:id="@+id/seriesFragment"
            android:name="com.vinicius.marvelwiki.ui.fragment.series.SeriesFragment"
            android:label="SeriesFragment"
            tools:layout="@layout/fragment_series">
        <action
                android:id="@+id/action_seriesFragment_to_detailsFragment"
                app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
            android:id="@+id/detailsFragment"
            android:name="com.vinicius.marvelwiki.ui.fragment.details.DetailsFragment"
            android:label="DetailsFragment"
            tools:layout="@layout/fragment_details"/>
</navigation>